{
  "extends": "airbnb-base",
  "plugins": ["import"],
  "rules": {
    "linebreak-style": 0,
    "no-console": "warn",
    "import/no-unresolved": "error",
    "import/extensions": ["error", "ignorePackages"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "camelcase": "off",
    "no-param-reassign": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
